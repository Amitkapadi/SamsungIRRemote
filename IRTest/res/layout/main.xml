<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="50" android:gravity="center_horizontal"
        android:layout_height="match_parent" >

     	<GridLayout
	             android:layout_width="wrap_content" 
	             android:layout_height="wrap_content" android:rowCount="3" android:columnCount="3" android:useDefaultMargins="true"  >
	    
     	    <Button
	                 android:id="@+id/up"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="1"
	                 android:layout_row="0"
	                 android:text="Up" />
	        <Button
	                 android:id="@+id/down"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="1"
	                 android:layout_row="2"
	                 android:text="Down" />
	        <Button
	                 android:id="@+id/left"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="0"
	                 android:layout_row="1"
	                 android:text="Left" />
	        <Button
	                 android:id="@+id/right"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="2"
	                 android:layout_row="1"
	                 android:text="Right" />
	        <Button
	                 android:id="@+id/ok"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="1"
	                 android:layout_row="1"
	                 android:text="OK" />
             
       	</GridLayout>
       
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50" >
		<Button
	                 android:id="@+id/back"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:text="Back" />
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="3"
	        android:layout_height="match_parent" android:orientation="vertical" >
	
	        <GridLayout
	             android:layout_width="wrap_content" android:layout_gravity="center" 
	             android:layout_height="wrap_content" android:columnCount="3" android:useDefaultMargins="true"  >
	         <Button
	                 android:id="@+id/volUp"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="0"
	                 android:layout_row="0"
	                 android:text="Vol+" />
	        <Button
	                 android:id="@+id/volDown"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="0"
	                 android:layout_row="2"
	                 android:text="Vol-" />
	        <Button
	                 android:id="@+id/start"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="1"
	                 android:layout_row="1"
	                 android:text="Start" />
	        <Button
	                 android:id="@+id/chanUp"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="2"
	                 android:layout_row="0"
	                 android:text="Chan+" />
	        <Button
	                 android:id="@+id/chanDown"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:layout_column="2"
	                 android:layout_row="2"
	                 android:text="Chan-" />
	        </GridLayout>
	
	        <Space
	            android:layout_width="wrap_content"
	            android:layout_height="40dp" />
	
	         <GridLayout
	             android:layout_width="wrap_content" android:layout_gravity="center" 
	             android:layout_height="wrap_content" android:columnCount="3" android:useDefaultMargins="true"  >
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="0"
	                 android:layout_row="0"
	                 android:onClick="onClick"
	                 android:text="1" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="1"
	                 android:layout_row="0"
	                 android:onClick="onClick"
	                 android:text="2" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="2"
	                 android:layout_row="0"
	                 android:onClick="onClick"
	                 android:text="3" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="0"
	                 android:layout_row="1"
	                 android:onClick="onClick"
	                 android:text="4" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="1"
	                 android:layout_row="1"
	                 android:onClick="onClick"
	                 android:text="5" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="2"
	                 android:layout_row="1"
	                 android:onClick="onClick"
	                 android:text="6" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="0"
	                 android:layout_row="2"
	                 android:onClick="onClick"
	                 android:text="7" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="1"
	                 android:layout_row="2"
	                 android:onClick="onClick"
	                 android:text="8" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="2"
	                 android:layout_row="2"
	                 android:onClick="onClick"
	                 android:text="9" />
	
	             <Button
	                 android:id="@+id/button1"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_column="1"
	                 android:layout_row="3"
	                 android:onClick="onClick"
	                 android:text="0" />
	         </GridLayout>
	    </LinearLayout>
	    <Button
	                 android:id="@+id/info"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:onClick="onClick"
	                 android:text="Info" />
		</LinearLayout>
   

</LinearLayout>